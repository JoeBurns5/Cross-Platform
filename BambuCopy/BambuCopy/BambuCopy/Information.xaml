<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BambuCopy.Information"
             BackgroundColor="AntiqueWhite">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bambu Score Sheet Information"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="EditorInfo"
                    Text="Editors info /n
                   Produced by Joe Burns and Justin Archibald on May 2019./n
                   Coming soon, updates that add Continue Game, Multiplayer, and GamePlay Aspect." />
            <Label x:Name="BookInfo"
                    Text="Book info" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>